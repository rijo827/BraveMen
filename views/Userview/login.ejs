<%-include("../partials/UserHeader")-%>
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="index.html" rel="nofollow">Home</a>
                    <span></span> Pages
                    <span></span> Login 
                </div>
            </div>
        </div>
        <section class="pt-100 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 m-auto">
                        <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-7">
                                <div class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5">
                                    <div class="padding_eight_all bg-white">
                                        <div class="heading_s1">
                                            <h3 class="mb-30">Login</h3>
                                        </div>
                                        <div>
                                            <style>
                                             .succmsg{
                                                 background-color: aquamarine;
                                                 text-align: center;
                                                 color: white;
                                             }
                                             .errmsg{
                                                 background-color: rgb(236, 109, 109);
                                                 text-align: center;
                                                 color: white;
                                             }
                                             small{
                                                 color: red;
                                             }
                                            </style>
                                             <% if(errmsg){%>
                                                 <p class="errmsg" id="errmsg"><%= errmsg%></p>
                                                 <%}else{%>
                                                     <p class="succmsg" id="succmsg"><%= succmsg%></p>
                                                 <%}%>
                                         </div>
                                        <form method="post" action="/login" onsubmit="return validateLoginForm()">
                                            <div class="form-group">
                                                <input type=""  name="Email" placeholder="Email" id="Email">
                                                <small id="emailError"></small>

                                            </div>
                                            <div class="form-group">
                                                <input  type="password" name="Password" placeholder="Password" id="password">
                                                <small id="passwordError"></small>

                                            </div>
                                            <div class="login_footer form-group">
                                                <a class="text-muted" href="/forgotPassword">Forgot password?</a>
                                            </div>
                                            <div class="form-group p-20 d-flex justify-content-around" >
                                                <button type="submit" class="btn btn-fill-out btn-block hover-up" name="login">Log in</button>
                                                <a href="/signup" class="btn btn-fill-out btn-block hover-up text-light" name="register">Register</a>

                                            </div>
                                            
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%-include("../partials/UserFooter")-%>  