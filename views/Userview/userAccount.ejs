    <script>
function checkCurrentPassword() {
    var currentPassword = document.getElementById("currentPassword").value;
    var newPasswordField = document.getElementById("newPassword");
    var confirmPasswordField = document.getElementsByName("cpassword")[0];

    // Enable the new password field if the current password is not empty
    if (currentPassword.trim() !== "") {
        newPasswordField.disabled = false;
        confirmPasswordField.disabled = false;
    } else {
        // Clear and disable the new password and confirm password fields if the current password is empty
        newPasswordField.value = "";
        confirmPasswordField.value = "";
        newPasswordField.disabled = true;
        confirmPasswordField.disabled = true;
    }
}


function loadAccountDetailsForm() {
    $.ajax({
        url: '/accountupdate',
        method: 'GET',
        dataType: 'json', // Change the dataType to json
        success: function(response) {
            console.log("Account details form loaded successfully.");
            console.log("response:",response);
            // Insert the HTML response into the #account-detail element
            $('#Firstname').val(response.User.Firstname); 
            $('#Lastname').val(response.User.Lastname); 
            $('#Phone').val(response.User.Phone); 
            $('#Email').val(response.User.Email); 
          
        },
        error: function(xhr, status, error) {
            console.error("Error loading account details form:", error);
        }
    });
}
loadAccountDetailsForm()

    </script>